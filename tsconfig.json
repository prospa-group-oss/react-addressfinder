{
  "compilerOptions": {
    "typeRoots": ["./types/", "./node_modules/@types/"],
    "target": "es5",
    "lib": ["dom"],
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "pretty": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "**/__tests__/*", "dist", "**/*.test.ts"]
}
